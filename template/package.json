{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "license": "WTFPL",
  "scripts": {
    "eslint": "eslint **/*.{js,jsx}",
    <% if (css) { %>
      "stylelint": "stylelint **/*.css --ignore-path .gitignore",
    <% } %>
    "test": "jest --coverage --config=.jestrc.json"
  },
  "lint-staged": {
    <% if (css) { %>
      "*.css": [
        "prettier --write --ignore-path .gitignore",
        "stylelint",
        "git add"
      ],
    <% } %>
    "*.{js,jsx}": [
      "prettier --write --ignore-path .gitignore",
      "eslint",
      "git add"
    ],
    "{!(package|package-lock),}.json": [
      "prettier --write --ignore-path .gitignore",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.16.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    <% if (css) { %>
      "stylelint-config-standard": "^18.0.0",
      "stylelint": "^8.4.0"
    <% } %>
  }
}
