{
  "name": "@bitpshr.net/caster",
  "version": "1.1.3",
  "description": "Caster generates package skeletons pre-configured for testing, linting, and formatting.",
  "license": "WTFPL",
  "repository": "github:bitpshr/caster",
  "files": [
    "index.js",
    "template"
  ],
  "bin": {
    "caster": "./index.js"
  },
  "scripts": {
    "eslint": "eslint **/*.{js,jsx}"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "{!(package|package-lock),}.json": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "ejs": "^2.5.7",
    "figlet": "^1.2.0",
    "fs-extra": "^5.0.0",
    "inquirer": "^5.0.1",
    "ora": "^1.3.0",
    "path": "^0.12.7",
    "recursive-readdir": "^2.2.1",
    "shelljs": "^0.8.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.16.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2"
  }
}
